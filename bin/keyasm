#!/usr/bin/env python3
import sys

from pyutils.shared_logic import parse_and_set_flags
parse_and_set_flags()

import pyutils.config as config
from pyutils.shared_logic import get_most_common_argparser
from pyutils.assembly import asm_keystone

parser = get_most_common_argparser()
parser.add_argument('instr', type=str, nargs='+')
args = parser.parse_args()

for instr in args.instr:
    print(f"{instr}:")
    a = asm_keystone(instr)
    assert(len(a) == 1)
    print(format(a[0], "08x"))
